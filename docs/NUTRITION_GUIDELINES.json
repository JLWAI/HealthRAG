    }
  },
  "meal_frequency": {
    "optimal_meals_per_day": [3, 5],
    "rationale": "Muscle protein synthesis peaks 3-5 times/day",
    "minimum_effective": 3,
    "maximum_practical": 6,
    "notes": "More frequent meals may aid satiety and energy stability"
  },
  "meal_timing": {
    "pre_workout": {
      "timing": "1-3 hours before training",
      "composition": "Protein + carbs, low fat",
      "example": "Chicken breast, rice, vegetables"
    },
    "post_workout": {
      "timing": "0-2 hours after training",
      "composition": "Protein + carbs, low-moderate fat",
      "example": "Whey protein shake, banana, oatmeal",
      "notes": "Anabolic window is real but less critical than total daily intake"
    },
    "before_bed": {
      "composition": "Protein, moderate fat, low carbs",
      "example": "Casein protein, Greek yogurt, nuts",
      "notes": "Slow-digesting protein supports overnight recovery"
    }
  },
  "diet_adjustment_algorithm": {
    "description": "MacroFactor-style adaptive TDEE (RP-aligned)",
    "steps": [
      "1. Track weight daily, calculate EWMA (Exponential Weighted Moving Average, α=0.3)",
      "2. Calculate 7-day rolling average weight",
      "3. Back-calculate TDEE: TDEE = Avg_Calories + (Weight_Change × 3500 / Days)",
      "4. Compare actual vs. target rate of weight change",
      "5. Adjust calories weekly based on adherence-neutral thresholds"
    ],
    "ewma_formula": "EWMA_today = α × weight_today + (1 - α) × EWMA_yesterday",
    "alpha": 0.3,
    "back_calculation_formula": "TDEE = Average_Calories_Consumed + (Weight_Change_lbs × 3500 / Days_Elapsed)",
    "adjustment_thresholds": {
      "within_20_percent": {
        "action": "No change",
        "rationale": "Rate of change is on track"
      },
      "within_50_percent": {
        "action": "Adjust ±150 calories",
        "rationale": "Moderate adjustment needed"
      },
      "beyond_50_percent": {
        "action": "Adjust ±100 calories",
        "rationale": "Smaller adjustment for safety"
      }
    },
    "assessment_timeline": {
      "week_1_2": "Assess baseline (weight, energy, hunger, cravings, gym performance)",
      "week_3_plus": "Adjust every 7-14 days based on rate of weight change"
    }
  },
