    "recomp": {
      "percent_of_calories": [25, 35],
      "grams_per_lb": [0.4, 0.5],
      "rationale": "Moderate fat for hormones and satiety"
    }
  },
  "carb_recommendations": {
    "calculation": "Remainder calories after protein and fat",
    "cutting": {
      "typical_range_grams": [150, 250],
      "notes": "Lower carbs due to caloric deficit, prioritize around training"
    },
    "maintenance": {
      "typical_range_grams": [250, 350],
      "notes": "Moderate carbs for training fuel and recovery"
    },
    "bulking": {
      "typical_range_grams": [300, 500],
