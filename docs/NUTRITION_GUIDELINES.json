    "timing": {
      "pre_workout": "1-3 hours before, protein + carbs",
      "post_workout": "0-2 hours after, protein + carbs (anabolic window helpful but not critical)",
      "evening": "Can be higher fat if not training next morning"
    }
  },
  "tdee_calculation": {
    "bmr_formula": "Mifflin-St Jeor",
    "males": {
      "formula": "BMR = 10 × weight(kg) + 6.25 × height(cm) - 5 × age(years) + 5",
      "example": "210 lb man, 72 inches, 35 years: BMR = 10×95.3 + 6.25×182.9 - 5×35 + 5 = 1,988 cal"
    },
    "females": {
      "formula": "BMR = 10 × weight(kg) + 6.25 × height(cm) - 5 × age(years) - 161",
      "example": "145 lb woman, 65 inches, 28 years: BMR = 10×65.8 + 6.25×165.1 - 5×28 - 161 = 1,418 cal"
    },
    "activity_factors": {
      "sedentary": {
        "multiplier": 1.2,
        "description": "Little or no exercise, desk job"
      },
      "light": {
        "multiplier": 1.375,
        "description": "Light exercise 1-3 days/week"
      },
      "moderate": {
        "multiplier": 1.55,
        "description": "Moderate exercise 3-5 days/week"
      },
      "active": {
        "multiplier": 1.725,
        "description": "Heavy exercise 6-7 days/week"
      },
      "very_active": {
        "multiplier": 1.9,
        "description": "Very heavy exercise, physical job, training 2x/day"
      }
    },
    "tdee_formula": "TDEE = BMR × Activity Factor"
  },
  "calorie_adjustments": {
    "cutting": {
      "tdee_adjustment": -500,
      "weekly_weight_change": -1.0,
      "notes": "Aggressive cut, 1 lb/week",
      "duration_recommended": "8-16 weeks"
    },
    "cutting_slow": {
      "tdee_adjustment": -250,
