  "protein_recommendations": {
    "cutting": {
      "grams_per_lb": [1.0, 1.2],
      "rationale": "Preserve muscle mass in caloric deficit",
      "priority": "High protein to prevent muscle loss"
    },
    "maintenance": {
      "grams_per_lb": [0.8, 1.0],
      "rationale": "Sustain current muscle mass",
      "priority": "Moderate protein sufficient for maintenance"
    },
    "bulking": {
      "grams_per_lb": [0.8, 1.0],
      "rationale": "Build muscle in caloric surplus",
      "priority": "Moderate protein, prioritize total calories"
    },
    "recomp": {
      "grams_per_lb": [1.0, 1.2],
      "rationale": "High protein aids simultaneous fat loss and muscle gain",
      "priority": "High protein like cutting phase"
    }
  },
  "fat_recommendations": {
    "cutting": {
      "percent_of_calories": [20, 30],
      "grams_per_lb": [0.3, 0.4],
      "rationale": "Lower fat allows more carbs for training while maintaining hormones"
    },
    "maintenance": {
      "percent_of_calories": [25, 35],
